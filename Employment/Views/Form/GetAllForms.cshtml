@model List<Employee>

@if (Model.Count != 0)
{
    <h3 class="mb-4">افراد کارجو</h3>


    <div class="container">
        <table class="table">
            <thead>
                <tr>

                    <th scope="col">نام</th>
                    <th scope="col">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Name @item.LastName</td>
                        <td>
                            <a class="btn btn-success" asp-action="GetFormById" asp-route-id="@item.Id">مشاهده</a> | <a class="btn btn-danger" asp-action="DeleteForm" asp-route-formId="@item.Id">حذف</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        <pre></pre>


        <a href="/" class="btn btn-primary">بازگشت</a>


    </div>
}

else{
    <div class="alert alert-danger">
        فرمی برای نمایش وجود ندارد
    </div>
}