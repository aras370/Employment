@model Employee


<div class="container mt-5">



    <input type="hidden" asp-for="Confirmation" />

    <div class="row mb-3">
        <div class="col">
            <label class="form-label">نام: </label>
            <input readonly asp-for="Name" class="form-control">
        </div>

        <div class="col">
            <label class="form-label">نام خانوادگی:</label>
            <input readonly asp-for="LastName" class="form-control">
        </div>

        <div class="col">
            <label class="form-label">نام پدر:</label>
            <input readonly asp-for="FhatherName" class="form-control">
        </div>

        <div class="col">
            <label class="form-label">کد ملی:</label>
            <input readonly type="number" asp-for="CodeMelli" class="form-control">
        </div>

    </div>


    <div class="row mb-3">
        <div class="col">
            <label class="form-label">تاریخ تولد: </label>
            <input readonly asp-for="BirthDate" class="form-control">
        </div>

        <div class="col">
            <label class="form-label">وضعیت تاهل:</label>
            <input readonly asp-for="Marriege" class="form-control">
        </div>

        <div class="col">
            <label class="form-label">تعداد فرزندان:</label>
            <input readonly type="number" asp-for="NumberOfChildren" class="form-control">
        </div>

        <div class="col">
            <label class="form-label">تحصیلات:</label>
            <input readonly asp-for="EducationLevel" class="form-control">
        </div>

    </div>


    <div class="row mb-3">
        <div class="col">
            <label class="form-label">رشته تحصیلی: </label>
            <input readonly asp-for="Major" class="form-control">
        </div>

        <div class="col">
            <label class="form-label">دانشگاه:</label>
            <input readonly asp-for="Univercity" class="form-control">
        </div>

        <div class="col">
            <label class="form-label">شماره تلفن:</label>
            <input readonly asp-for="PhoneNumber" class="form-control">
        </div>



    </div>

    <div class="row mb-3">
        <label class="form-label">آدرس:</label>
        <textarea class="form-control" readonly asp-for="Address"></textarea>
    </div>

    <div class="row mb-3">
        <p>
            <h4>
                سوابق شغلی:

            </h4>
        </p>

        <div class="col">
            <label class="form-label">شغل سابق:</label>
            <input readonly asp-for="Formerjob" class="form-control">
        </div>

        <div class="col">
            <label class="form-label">تاریخ شروع:</label>
            <input readonly asp-for="StartDate" class="form-control">
        </div>


        <div class="col">
            <label class="form-label">تاریخ پایان:</label>
            <input readonly asp-for="EndDate" class="form-control">
        </div>


        <div class="col">
            <label class="form-label">سمت:</label>
            <input readonly asp-for="Position" class="form-control">
        </div>

        <div class="col">
            <label class="form-label">حقوق:</label>
            <input readonly type="number" asp-for="Salary" class="form-control">
        </div>

    </div>

    <div class="row mb-3">
        <label class="form-label">علت ترک کار:</label>
        <textarea class="form-control" readonly asp-for="CauseOfLeave"></textarea>
    </div>

    <div class="row mb-3">
        <label class="form-label">شماره و آدرس کارفرما:</label>
        <textarea class="form-control" readonly asp-for="InformaionOfFormerBoss"></textarea>
    </div>

    <div class="row row-cols-2 mb-3">

        <div class="col">
            <label class="form-label">حقوق درخواستی:</label>
            <input class="form-control" readonly type="number" asp-for="RequestedSalary">
        </div>

        <div class="col">
            <label class="form-label">تاریخ:</label>
            <input class="form-control" readonly type="text" asp-for="DateTime">
        </div>

        @*<span asp-validation-for="Name"></span>*@




    </div>


    @* @if (Model.Comment != null)
    {
    <div class="row mb-3">
    <label asp-for="Comment" class="form-label"></label>
    <textarea readonly asp-for="Comment" class="form-control"></textarea>
    </div>
    }*@


    @if (Model.Confirmation == 0)
    {
        <form asp-action="Confirm" asp-controller="Form">
            <div class="row mb-3">
                <label class="form-label">دیدگاه کارشناس:</label>
                <textarea name="comment" class="form-control"></textarea>
            </div>
            <input type="hidden" name="formId" value="@Model.Id">
            <input type="submit" value="تایید متقاضی" class="btn btn-success">
            <a href="/Form/GetAllForms" class="btn btn-primary">بازگشت</a>

        </form>
    }



    @if (Model.Confirmation==1 && Model.Comment==null)
    {
        <a class="btn btn-success" asp-action="Confirm" asp-controller="Form" asp-route-formId="@Model.Id">تایید متقاضی</a>
        <a class="btn btn-primary" asp-action="GetAllForms" asp-controller="Form">بازگشت</a>
    }


    @if (Model.Confirmation == 2 && Model.Comment == null)
    {
        <a class="btn btn-success" asp-action="FinalConfirmation" asp-controller="Form" asp-route-formId="@Model.Id">تایید نهایی</a>
        <a class="btn btn-primary" asp-action="GetAllForms" asp-controller="Form">بازگشت</a>
    }


    @if (Model.Comment!=null)
    {

        @if (Model.Confirmation == 1)
        {
            <form asp-action="Confirm" asp-controller="Form">
                <div class="row mb-3">
                    <label asp-for="Comment" class="form-label"></label>
                    <textarea readonly asp-for="Comment" class="form-control"></textarea>
                </div>
                <input type="hidden" name="formId" value="@Model.Id">
                <input type="submit" value="تایید متقاضی" class="btn btn-success">
            </form>

        }

        @if (Model.Confirmation == 2)
        {

            <div class="row mb-3">
                <label asp-for="Comment" class="form-label"></label>
                <textarea readonly asp-for="Comment" class="form-control"></textarea>
            </div>

            <a class="btn btn-success" asp-action="FinalConfirmation" asp-controller="Form" asp-route-formId="@Model.Id">تایید نهایی</a>
            <a class="btn btn-primary" asp-action="GetAllForms" asp-controller="Form">بازگشت</a>

        }
    }

</div>