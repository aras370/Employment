@model EmployeeUser
@inject IAdmin _admin;
@{
    var departments = _admin.GetDepartmentForAdmin();

}
<div class="container">

    <form method="post">

        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">نام و نام خانوادگی:</label>
            <div class="col-sm-3">
                <input type="text" asp-for="Name" class="form-control" id="inputEmail3">
            </div>
        </div>


        <input type="hidden" value="0" asp-for="DepartmentId" />

        <div class="text-danger" asp-validation-summary="All"></div>

        <pre>
        </pre>

        <div class="form-group ">
            <div class="row">
                بخش کاری
            </div>
            <hr />


            <ul>

               @foreach (var item in departments)
                {
                    <li>
                        <input type="radio" value="@item.DepartmentId" name="selectedDepartment">@item.Name
                    </li>
                }
               
              

            </ul>
        </div>

        <pre></pre>

        <button type="submit" class="btn btn-success">افزودن</button>
        <a asp-action="Index" class="btn btn-primary">بازگشت</a>
    </form>


</div>
