@model List<EmploymentDataLayer.User>
@{
    ViewData["Title"] = "کاربران";
   
}

<div class="container mt-4">
    <table class="table">
        <thead>
            <tr>

                <th scope="col"> نام کاربر </th>
                <th scope="col">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit"  asp-route-userId="@item.Id">ویرایش</a> | <a class="btn btn-danger" asp-action="Delete" asp-route-userId="@item.Id">حذف</a>
                        | <a class="btn btn-primary" asp-action="ShowActivities" asp-route-userId="@item.Id">فعالیت های اخیر</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <pre></pre>

    <a class="btn btn-success" asp-action="Create">افزودن</a>
    <a href="/" class="btn btn-primary">بازگشت</a>


</div>
